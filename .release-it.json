{
  "git": {
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "tag": false,
    "push": true,
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": [],
    "after:bump": []
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md"
    }
  }
}
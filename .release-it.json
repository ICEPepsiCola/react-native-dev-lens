{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireBranch": "main"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": "echo 'Release includes both Desktop App and SDK'"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": [
      "pnpm lint"
    ],
    "after:bump": [
      "pnpm sync-version",
      "pnpm tauri build"
    ],
    "after:release": [
      "cd packages/sdk && pnpm publish --no-git-checks"
    ]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md"
    }
  }
}